<!DOCTYPE html>
<html>

<head>
	<title>MPCS 52553 HW3</title>
	<meta charset="utf-8">
	<%= stylesheet_link_tag "index.css" %>	<!-- didn't use -->
</head>


<body>

<div class="container">

	<div class="page-header">
		<h1>Divvy Stations</h1>
	</div>

	<!-- List all the divvy stations -->
	<% stations = DivvyStation.all %>
	<% stations[1]["name"] %>

	<div class="row table-responsive">
		
		<div class="col-sm-8">
			<table class = "table table-striped table-bordered">
				<thead>
					<tr>
						<th>ID</th>
						<th>Location</th>
					</tr>
				</thead>

				<tbody>
					<!-- Generate a row for each station -->
					<% stations.each do |station| %>
					<tr>
						<% link = "/stations/#{station['id']}"%>
						<td><a href=<%= link %>>
							<%= station["id"]%></a>
						</td>
						<td><a href=<%= link %>>
							<%= station["name"]%></a>
						</td>
					</tr>
					<% end %>
				</tbody>

			</table>

		</div>
	</div>


</div>
</body>

</html>


